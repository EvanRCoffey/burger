{{#each burgers}}
  <p>Burger Name: {{burger_name}}</p>
  <p>Devoured: ${{devoured}}</p>
  <p>Timestamp of burger's creation: {{date}}</p>
  <hr>
{{/each}}

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devo">Eat now?</label><br>
    <input type="radio" name="devoured" value="1"> Devour it!<br>
    <input type="radio" name="togo" value="0" checked> Get it "to go"
  </div>

  <button type="submit">Add Burger</button>
</form>







